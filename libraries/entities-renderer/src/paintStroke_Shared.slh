struct PolylineVertex {
    _PL_VEC4 positionAndUCoord;
    _PL_VEC4 color;
    _PL_VEC4 normal;
    _PL_VEC4 binormalAndHalfWidth;
};

struct PolylineData {
    _PL_VEC2 faceCameraGlow;
    _PL_VEC2 spare;
};

